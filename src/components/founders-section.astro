---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="founders__section">
    <h1 class="text-3xl font-bold mb-6 text-center">{t('founders.title')}</h2>
    <div class="container mx-auto px-4 sm:px-6 py-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6 sm:gap-8">
            <div class="bg-white bg-opacity-10 p-4 sm:p-6 rounded-lg text-center">
                <img src="/founder-1.jpg" alt="Founder 1" class="w-24 h-24 sm:w-32 sm:h-32 rounded-full mx-auto mb-4">
                <h2 class="text-xl sm:text-2xl font-bold mb-2">{t('founders.name1')}</h3>
                <p class="text-base sm:text-lg mb-4">{t('founders.position1')}</p>
                <p class="text-sm sm:text-base">{t('founders.description1')}</p>
            </div>
            <div class="bg-white bg-opacity-10 p-4 sm:p-6 rounded-lg text-center">
                <img src="/founder-2.jpg" alt="Founder 2" class="w-24 h-24 sm:w-32 sm:h-32 rounded-full mx-auto mb-4">
                <h2 class="text-xl sm:text-2xl font-bold mb-2">{t('founders.name2')}</h3>
                <p class="text-base sm:text-lg mb-4">{t('founders.position2')}</p>
                <p class="text-sm sm:text-base">{t('founders.description2')}</p>
            </div>
        </div>
    </div>
</div>