---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="about__section">
  <h2 class="text-3xl font-bold mb-6 text-center">{t('title.about')}</h2>
  <div class="container mx-auto px-4 py-8">
    <p class="text-xl mb-8 text-center">
      {t('about.description')}
    </p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white bg-opacity-10 p-6 rounded-lg text-center">
        <h3 class="text-4xl font-bold mb-2">200+</h3>
        <p class="text-2xl font-bold mb-2">{t('about.students')}</p>
        <p>{t('about.students.description')}</p>
      </div>
      <div class="bg-white bg-opacity-10 p-6 rounded-lg text-center">
        <h3 class="text-4xl font-bold mb-2">10+</h3>
        <p class="text-2xl font-bold mb-2">{t('about.courses')}</p>
        <p>{t('about.courses.description')}</p>
      </div>
      <div class="bg-white bg-opacity-10 p-6 rounded-lg text-center">
        <h3 class="text-4xl font-bold mb-2">10</h3>
        <p class="text-2xl font-bold mb-2">{t('about.services')}</p>
        <p>{t('about.services.description')}</p>
      </div>
    </div>
  </div>
</div>
