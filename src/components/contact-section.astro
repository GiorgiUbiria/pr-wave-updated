---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="contact__section">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <div class="lg:w-1/2 bg-white bg-opacity-10 p-6 rounded-lg">
        <h2 class="text-3xl font-bold mb-6">Contact Us</h2>
        <p class="mb-4">
          {t('contact.description')}
        </p>
        <ul class="list-disc list-inside mb-4">
          <li>{t('contact.list.1')}</li>
          <li>{t('contact.list.2')}</li>
          <li>{t('contact.list.3')}</li>
          <li>{t('contact.list.4')}</li>
        </ul>
        <p>
          {t('contact.form.description')}
        </p>
      </div>
      <div class="lg:w-1/2 bg-white bg-opacity-10 p-6 rounded-lg">
        <form class="space-y-4">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="w-full sm:w-1/2">
              <label for="fullName" class="block mb-2">Full Name</label>
              <input
                type="text"
                id="fullName"
                name="fullName"
                class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none"
                required
              />
            </div>
            <div class="w-full sm:w-1/2">
              <label for="profession" class="block mb-2">Profession</label>
              <input
                type="text"
                id="profession"
                name="profession"
                class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none"
                required
              />
            </div>
          </div>
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="w-full sm:w-1/2">
              <label for="birthDate" class="block mb-2">Birth Date</label>
              <input
                type="date"
                id="birthDate"
                name="birthDate"
                class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none"
                required
              />
            </div>
            <div class="w-full sm:w-1/2">
              <label for="email" class="block mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none"
                required
              />
            </div>
          </div>
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="w-full sm:w-1/2">
              <label for="phone" class="block mb-2">Phone Number</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none"
                required
              />
            </div>
            <div class="w-full sm:w-1/2">
              <label for="course" class="block mb-2"
                >{t('contact.form.selectCourse')}</label
              >
              <select
                id="course"
                name="course"
                class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none"
                required
              >
                <option value="">{t('contact.form.selectCourse')}</option>
                <option value="course1">{t('contact.form.course1')}</option>
                <option value="course2">{t('contact.form.course2')}</option>
                <option value="course3">{t('contact.form.course3')}</option>
              </select>
            </div>
          </div>
          <div>
            <label for="socialMedia" class="block mb-2"
              >{t('contact.form.socialMediaLink')}</label
            >
            <input
              type="url"
              id="socialMedia"
              name="socialMedia"
              class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none"
              required
            />
          </div>
          <div>
            <button
              type="submit"
              class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300"
              >{t('contact.form.submit')}</button
            >
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
