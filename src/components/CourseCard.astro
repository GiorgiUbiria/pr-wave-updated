---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  duration: string;
  level: string;
  price: string;
  image: ImageMetadata;
}

const { title, description, duration, level, price, image } = Astro.props;
---

<div
  class="group relative bg-gray-50 dark:bg-white/5 rounded-xl overflow-hidden transition-all duration-500 hover:transform hover:scale-[1.02]"
>
  <!-- Image -->
  <div class="relative h-48 overflow-hidden">
    <Image
      src={image}
      alt={title}
      width={500}
      height={500}
      class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-gray-900 dark:from-[#13151a] to-transparent opacity-60"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="relative p-6">
    <h3
      class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-300 transition-colors"
    >
      {title}
    </h3>
    <p class="text-gray-600 dark:text-blue-200/80 text-sm mb-4">{description}</p>

    <!-- Details -->
    <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-blue-300/60 mb-4">
      <div class="flex items-center gap-1">
        <span class="i-mdi-light-clock w-4 h-4"></span>
        <span>{duration}</span>
      </div>
      <div class="flex items-center gap-1">
        <span class="i-mdi-light-signal w-4 h-4"></span>
        <span>{level}</span>
      </div>
    </div>

    <!-- Price and CTA -->
    <div class="flex items-center justify-between">
      <span class="text-xl font-bold text-gray-900 dark:text-white">{price}</span>
      <button
        class="px-4 py-2 bg-blue-500/5 dark:bg-blue-500/10 text-blue-600 dark:text-blue-300 rounded-lg hover:bg-blue-500/10 dark:hover:bg-blue-500/20 transition-colors"
      >
        Learn More
      </button>
    </div>
  </div>
</div>
