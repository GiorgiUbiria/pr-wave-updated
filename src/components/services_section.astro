---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="services__section container mx-auto px-4 py-16">
  <h2 class="text-3xl font-bold text-center mb-12">{t('services.title')}</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="service-card p-6 rounded-lg bg-white bg-opacity-10">
      <h3 class="text-xl font-bold mb-4">{t('services.digital.title')}</h3>
      <p>{t('services.digital.description')}</p>
    </div>
    <div class="service-card p-6 rounded-lg bg-white bg-opacity-10">
      <h3 class="text-xl font-bold mb-4">{t('services.social.title')}</h3>
      <p>{t('services.social.description')}</p>
    </div>
    <div class="service-card p-6 rounded-lg bg-white bg-opacity-10">
      <h3 class="text-xl font-bold mb-4">{t('services.content.title')}</h3>
      <p>{t('services.content.description')}</p>
    </div>
  </div>
</div>