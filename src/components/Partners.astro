---
const partners = [
  { name: "Disney", icon: "i-simple-icons-disney" },
  { name: "Airbnb", icon: "i-simple-icons-airbnb" },
  { name: "Apple", icon: "i-simple-icons-apple" },
  { name: "Samsung", icon: "i-simple-icons-samsung" },
  { name: "Meta", icon: "i-simple-icons-meta" },
  { name: "Quora", icon: "i-simple-icons-quora" },
  { name: "Spotify", icon: "i-simple-icons-spotify" },
  { name: "Amazon", icon: "i-simple-icons-amazon" },
  { name: "Google", icon: "i-simple-icons-google" },
  { name: "Microsoft", icon: "i-simple-icons-microsoft" },
];

const duplicatedPartners = [...partners, ...partners];
---

<section class="py-16 px-4 overflow-hidden">
  <h2 class="text-4xl font-bold text-center text-white mb-12">Our Partners</h2>

  <div class="relative max-w-6xl mx-auto">
    <div
      class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-[#1e3a8a] to-transparent z-10"
    >
    </div>
    <div
      class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-[#0ea5e9] to-transparent z-10"
    >
    </div>

    <div class="flex gap-12 animate-scroll">
      {
        duplicatedPartners.map((partner, index) => (
          <div class="flex-none w-20 h-20 flex items-center justify-center rounded-xl bg-white/5 hover:bg-white/10 transition-all duration-300 hover:scale-110 group">
            <div
              class={`${partner.icon} w-10 h-10 text-white/50 group-hover:text-white transition-colors`}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>
