---
interface Props {
  as?: keyof typeof elements;
  variant?: keyof typeof variants;
  class?: string;
}

const elements = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h4",
  p: "p",
  span: "span",
} as const;

const variants = {
  "heading-1": "text-4xl md:text-5xl lg:text-6xl font-bold",
  "heading-2": "text-3xl md:text-4xl lg:text-5xl font-bold",
  "heading-3": "text-2xl md:text-3xl lg:text-4xl font-bold",
  "body-large": "text-lg md:text-xl",
  body: "text-base",
  "body-small": "text-sm",
} as const;

const {
  as: Element = "p",
  variant = "body",
  class: className = "",
  ...props
} = Astro.props;
---

<Element class:list={[variants[variant as keyof typeof variants], className]} {...props}>
  <slot />
</Element>
