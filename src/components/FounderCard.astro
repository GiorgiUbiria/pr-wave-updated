---
import type { ImageMetadata } from "astro";

interface Props {
  name: string;
  role: string;
  expertise: string;
  imageUrl: ImageMetadata;
}

const { name, role, expertise, imageUrl } = Astro.props;

import { Image } from "astro:assets";
---

<div
  class="group relative overflow-hidden rounded-xl bg-white/5 p-6 transition-all duration-300 hover:bg-white/10 hover:scale-105 hover:shadow-xl"
>
  <div class="flex items-center gap-4">
    <div class="relative">
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-500 to-cyan-500 animate-pulse group-hover:animate-none"
      >
      </div>
      <Image
        src={imageUrl}
        alt={name}
        width={80}
        height={80}
        class="relative w-20 h-20 rounded-full object-cover border-2 border-white/20"
      />
    </div>
    <div class="flex-1">
      <h3
        class="text-xl font-bold text-white group-hover:text-blue-300 transition-colors"
      >
        {name}
      </h3>
      <p class="text-sm text-blue-200 mb-1">{role}</p>
      <p class="text-xs text-blue-300/80">{expertise}</p>
    </div>
  </div>
  <div
    class="absolute -right-20 -bottom-20 w-40 h-40 bg-blue-500/10 rounded-full blur-3xl group-hover:bg-blue-500/20 transition-all duration-300"
  >
  </div>
</div>
