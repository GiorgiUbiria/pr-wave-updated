---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import AnimatedBackground from "../../components/AnimatedBackground.astro";
import FounderCard from "../../components/FounderCard.astro";
import Partners from "../../components/Partners.astro";
import ServiceCard from "../../components/ServiceCard.astro";
import CourseCard from "../../components/CourseCard.astro";
import { languages, defaultLang } from "../../i18n/ui";
import { useTranslations } from "../../i18n/utils";


import socialMediaMarketing from "../../images/courses/social-media-marketing.jpg";
import contentCreation from "../../images/courses/content-creation.jpg";
import analytics from "../../images/courses/analytics.jpg";
import leila from "../../images/founders/founder-1.jpg";
import nino from "../../images/founders/founder-2.jpg";

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang = defaultLang } = Astro.params;
const t = useTranslations(lang as keyof typeof languages);
---

<Layout title="Modern Company Website">
  <AnimatedBackground />
  <Navigation />

  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-32 px-4 relative">
      <div class="max-w-6xl mx-auto text-center">
        <h1
          class="text-6xl font-bold dark:text-white text-gray-900 mb-6 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-blue-800 dark:from-white dark:to-blue-200"
        >
          {t("hero.title")}
        </h1>
        <p class="text-xl text-gray-700 dark:text-blue-100 max-w-2xl mx-auto">
          {t("hero.subtitle")}
        </p>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-16 px-4" id="services">
      <div class="max-w-6xl mx-auto">
        <h2
          class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-4"
        >
          {t("services.title")}
        </h2>
        <p
          class="text-gray-600 dark:text-blue-200 text-center mb-12 max-w-2xl mx-auto"
        >
          {t("services.subtitle")}
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <ServiceCard
            title={t("services.social.title")}
            description={t("services.social.description")}
            icon="mdi:home"
          />
          <ServiceCard
            title={t("services.content.title")}
            description={t("services.content.description")}
            icon="mdi:pencil"
          />
          <ServiceCard
            title={t("services.brand.title")}
            description={t("services.brand.description")}
            icon="mdi:strategy"
          />
          <ServiceCard
            title={t("services.marketing.title")}
            description={t("services.marketing.description")}
            icon="mdi:trending-up"
          />
          <ServiceCard
            title={t("services.analytics.title")}
            description={t("services.analytics.description")}
            icon="mdi:chart-bar"
          />
          <ServiceCard
            title={t("services.community.title")}
            description={t("services.community.description")}
            icon="mdi:account-group"
          />
        </div>
      </div>
    </section>

    <!-- Courses Section -->
    <section class="py-16 px-4 bg-gray-50 dark:bg-white/5" id="courses">
      <div class="max-w-6xl mx-auto">
        <h2
          class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-4"
        >
          Featured Courses
        </h2>
        <p
          class="text-gray-600 dark:text-blue-200 text-center mb-12 max-w-2xl mx-auto"
        >
          Master the art of social media marketing with our expert-led courses
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <CourseCard
            title="Social Media Marketing Mastery"
            description="Learn the fundamentals of social media marketing and create winning strategies."
            duration="8 weeks"
            level="Beginner"
            price="$299"
            image={socialMediaMarketing}
          />
          <CourseCard
            title="Content Creation Pro"
            description="Master the art of creating engaging content for multiple platforms."
            duration="6 weeks"
            level="Intermediate"
            price="$249"
            image={contentCreation}
          />
          <CourseCard
            title="Advanced Analytics"
            description="Deep dive into social media analytics and data-driven decision making."
            duration="10 weeks"
            level="Advanced"
            price="$399"
            image={analytics}
          />
        </div>
      </div>
    </section>

    <!-- Founders Section -->
    <section class="py-16 px-4" id="team">
      <h2
        class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-12"
      >
        Our Founders
      </h2>
      <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-6">
        <FounderCard
          name="Leila Berdzenishvili"
          role="Founding Director"
          expertise="Social Media Marketing Expert"
          imageUrl={leila}
        />
        <FounderCard
          name="Nino Chkheidze"
          role="Founding Director"
          expertise="Social Media Marketing Expert"
          imageUrl={nino}
        />
      </div>
    </section>

    <Partners />

    <!-- Footer -->
    <footer
      class="py-8 text-center text-gray-600 dark:text-blue-200 border-t border-gray-200 dark:border-white/5"
    >
      <div class="max-w-6xl mx-auto px-4">
        <p class="mb-4">Â© 2024 PR Wave. All rights reserved.</p>
        <div class="flex justify-center gap-6">
          <a
            href="/privacy-policy"
            class="hover:text-gray-900 dark:hover:text-white transition-colors"
            >Privacy Policy</a
          >
          <a
            href="/terms-of-service"
            class="hover:text-gray-900 dark:hover:text-white transition-colors"
            >Terms of Service</a
          >
          <a
            href="/contact-us"
            class="hover:text-gray-900 dark:hover:text-white transition-colors"
            >Contact Us</a
          >
        </div>
      </div>
    </footer>
  </main>
</Layout>
