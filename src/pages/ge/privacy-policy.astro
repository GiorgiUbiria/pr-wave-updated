---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Privacy Policy - PR Wave">
  <section class="bg-gradient-to-r from-[#0d1c9a] to-[#00a6ed] text-white min-h-screen">
    <div class="container mx-auto px-4 py-16">
      <h1 class="text-4xl font-bold text-center mb-8">{t('title.privacy')}</h1>
      <div class="prose prose-invert max-w-3xl mx-auto">
        <p class="mb-4">{t('privacy.last_updated')}</p>
        
        <h2 class="text-2xl font-semibold mt-8 mb-4">{t('privacy.information_we_collect')}</h2>
        <p class="mb-4">{t('privacy.information_we_collect_description')}</p>

        <h2 class="text-2xl font-semibold mt-8 mb-4">{t('privacy.how_we_use_your_information')}</h2>
        <p class="mb-4">{t('privacy.how_we_use_your_information_description')}</p>

        <!-- Add more sections as needed -->
      </div>
    </div>
  </section>
</Layout>