---
import Layout from '../../layouts/Layout.astro';
import ContactSection from '../../components/contact-section.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('title.contact')}>
  <section class="bg-gradient-to-r from-[#0d1c9a] to-[#00a6ed] text-white min-h-screen">
    <div class="container mx-auto px-4 py-16">
      <h1 class="text-4xl font-bold text-center mb-8">{t('contact.title')}</h1>
      <ContactSection />
    </div>
  </section>
</Layout> 