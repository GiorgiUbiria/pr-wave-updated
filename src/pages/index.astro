---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import AnimatedBackground from "../components/AnimatedBackground.astro";
import FounderCard from "../components/FounderCard.astro";
import Partners from "../components/Partners.astro";
import ServiceCard from "../components/ServiceCard.astro";
import CourseCard from "../components/CourseCard.astro";

import LeilaImage from "../images/founder-1.jpg";
import NinoImage from "../images/founder-2.jpg";

import SocialMediaMarketingImage from "../images/courses/social-media-marketing.jpg";
import ContentCreationImage from "../images/courses/content-creation.jpg";
import AnalyticsImage from "../images/courses/analytics.jpg";
---

<Layout title="Modern Company Website">
  <AnimatedBackground />
  <Navigation />

  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-32 px-4 relative">
      <div class="max-w-6xl mx-auto text-center">
        <h1
          class="text-6xl font-bold text-white mb-6 bg-clip-text text-transparent bg-gradient-to-r from-white to-blue-200"
        >
          Building the Future Together
        </h1>
        <p class="text-xl text-blue-100 max-w-2xl mx-auto">
          We're a team of passionate individuals dedicated to creating
          innovative solutions that transform businesses and enhance lives.
        </p>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-16 px-4" id="services">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold text-center text-white mb-4">
          Our Services
        </h2>
        <p class="text-blue-200 text-center mb-12 max-w-2xl mx-auto">
          Comprehensive solutions tailored to elevate your brand's presence and
          engagement
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <ServiceCard
            title="Social Media Management"
            description="Strategic planning and execution of social media campaigns to boost your brand's online presence."
            icon="mdi:home"
          />
          <ServiceCard
            title="Content Creation"
            description="Engaging, platform-optimized content that resonates with your target audience."
            icon="mdi:pencil"
          />
          <ServiceCard
            title="Brand Strategy"
            description="Comprehensive brand development and positioning to stand out in your market."
            icon="mdi:strategy"
          />
          <ServiceCard
            title="Digital Marketing"
            description="Data-driven marketing campaigns across multiple digital channels."
            icon="mdi:trending-up"
          />
          <ServiceCard
            title="Analytics & Reporting"
            description="Detailed insights and analytics to measure and optimize your social media performance."
            icon="mdi:chart-bar"
          />
          <ServiceCard
            title="Community Management"
            description="Active engagement and community building to foster brand loyalty."
            icon="mdi:account-group"
          />
        </div>
      </div>
    </section>

    <!-- Courses Section -->
    <section class="py-16 px-4 bg-white/5" id="courses">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold text-center text-white mb-4">
          Featured Courses
        </h2>
        <p class="text-blue-200 text-center mb-12 max-w-2xl mx-auto">
          Master the art of social media marketing with our expert-led courses
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <CourseCard
            title="Social Media Marketing Mastery"
            description="Learn the fundamentals of social media marketing and create winning strategies."
            duration="8 weeks"
            level="Beginner"
            price="$299"
            image={SocialMediaMarketingImage}
          />
          <CourseCard
            title="Content Creation Pro"
            description="Master the art of creating engaging content for multiple platforms."
            duration="6 weeks"
            level="Intermediate"
            price="$249"
            image={ContentCreationImage}
          />
          <CourseCard
            title="Advanced Analytics"
            description="Deep dive into social media analytics and data-driven decision making."
            duration="10 weeks"
            level="Advanced"
            price="$399"
            image={AnalyticsImage}
          />
        </div>
      </div>
    </section>

    <!-- Founders Section -->
    <section class="py-16 px-4" id="team">
      <h2 class="text-4xl font-bold text-center text-white mb-12">
        Our Founders
      </h2>
      <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-6">
        <FounderCard
          name="Leila Berdzenishvili"
          role="Founding Director"
          expertise="Social Media Marketing Expert"
          imageUrl={LeilaImage}
        />
        <FounderCard
          name="Nino Chkheidze"
          role="Founding Director"
          expertise="Social Media Marketing Expert"
          imageUrl={NinoImage}
        />
      </div>
    </section>

    <Partners />

    <!-- Footer -->
    <footer class="py-8 text-center text-blue-200 border-t border-white/5">
      <div class="max-w-6xl mx-auto px-4">
        <p class="mb-4">Â© 2024 PR Wave. All rights reserved.</p>
        <div class="flex justify-center gap-6">
          <a href="/privacy-policy" class="hover:text-white transition-colors"
            >Privacy Policy</a
          >
          <a href="/terms-of-service" class="hover:text-white transition-colors"
            >Terms of Service</a
          >
          <a href="/contact-us" class="hover:text-white transition-colors"
            >Contact Us</a
          >
        </div>
      </div>
    </footer>
  </main>
</Layout>
